<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_ocean">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_circle_gray"
            android:src="@drawable/ic_back"
            app:tint="@color/text_primary"
            android:contentDescription="Back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Ảnh Playlist (Placeholder) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#282828">
                    <ImageView
                        android:id="@+id/img_playlist_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/playlist" />
                </androidx.cardview.widget.CardView>

                <!-- Thông tin bên phải -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tv_playlist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên Playlist"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_profile"
                            app:tint="#1DB954"/>

                        <TextView
                            android:id="@+id/tv_owner_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bạn"
                            android:textColor="#B3B3B3"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                        <ImageButton
                            android:id="@+id/btn_menu"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="12dp"
                            android:scaleType="fitCenter"
                            android:contentDescription="Menu"
                            android:src="@drawable/ic_more"
                            app:tint="@color/text_primary" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btn_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:src="@drawable/ic_play"
                            android:contentDescription="Play"
                            app:backgroundTint="#1DB954"
                            app:tint="#FFFFFF"
                            app:layout_anchor="@id/recycler_playlist_songs"
                            app:layout_anchorGravity="top|end" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Nút Thêm nhạc to -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_songs_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Thêm nhạc"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/white"
                app:cornerRadius="24dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:layout_gravity="start"
                android:layout_marginBottom="24dp"/>

            <!-- Danh sách bài hát -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài hát trong Playlist"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_playlist_songs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <!-- Empty State -->
            <TextView
                android:id="@+id/tv_empty_songs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa có bài hát nào.\nHãy thêm nhạc mới!"
                android:textColor="#B3B3B3"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"/>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>