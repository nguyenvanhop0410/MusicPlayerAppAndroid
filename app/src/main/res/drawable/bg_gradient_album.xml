<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0B0014" />
        </shape>
    </item>

    <item android:top="-150dp" android:left="-150dp">
        <shape android:shape="oval">
            <gradient
                android:gradientRadius="600dp"
                android:startColor="#80FF00CC"
                android:endColor="#00000000"
                android:type="radial" />
        </shape>
    </item>

    <item android:bottom="-150dp" android:right="-150dp">
        <shape android:shape="oval">
            <gradient
                android:gradientRadius="600dp"
                android:startColor="#6600FFFF"
                android:endColor="#00000000"
                android:type="radial" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#80000000"
                android:centerColor="#20000000"
                android:endColor="#40000000"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>