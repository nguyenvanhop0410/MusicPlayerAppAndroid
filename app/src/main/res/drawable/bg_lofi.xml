<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0F171E"/>
        </shape>
    </item>

    <item android:top="-150dp" android:left="-150dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="30%"
                android:centerY="30%"
                android:startColor="#202A9D8F"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <item android:bottom="-150dp" android:right="-150dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="70%"
                android:centerY="70%"
                android:startColor="#20E76F51"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#05FFFFFF"/>
        </shape>
    </item>

</layer-list>